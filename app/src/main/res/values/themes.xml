<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="MyMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:popupBackground">?attr/colorPrimary</item>
    </style>
    <style name="myCustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/icon_more</item>
    </style>
    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">#919191</item>
        <item name="colorSecondary">@color/colorSecondary_night</item>
    </style>
    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="AppTheme.About" parent="nightTheme">
    </style>

    <style name="Widget.MaterialDrawerStyleCustom" parent="Widget.MaterialDrawerStyle">
        <item name="materialDrawerInsetForeground">#FF0000</item>
        <!-- MaterialDrawer specific values -->
        <item name="materialDrawerBackground">?attr/colorPrimary</item>
        <item name="materialDrawerPrimaryText">?attr/colorOnPrimary</item>
        <item name="materialDrawerPrimaryIcon">?attr/colorOnPrimary</item>
        <item name="materialDrawerSecondaryText">?attr/colorOnPrimary</item>
        <item name="materialDrawerSecondaryIcon">?attr/colorOnPrimary</item>
        <item name="materialDrawerDividerColor">?attr/colorPrimaryVariant</item>
<!--        <item name="materialDrawerSelectedBackgroundColor">?colorSecondaryContainer</item>-->
    </style>

    <style name="Widget.MaterialDrawerHeaderStyleCustom" parent="">
        <item name="materialDrawerCompactStyle">true</item>
        <item name="materialDrawerHeaderSelectionText">?attr/colorOnPrimary</item>
        <item name="materialDrawerHeaderSelectionSubtext">?attr/colorOnPrimary</item>
    </style>

    <!-- Base application theme. -->
    <style name="SunnyWeather" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="materialDrawerStyle">@style/Widget.MaterialDrawerStyleCustom</item>
        <item name="materialDrawerHeaderStyle">@style/Widget.MaterialDrawerHeaderStyleCustom</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="actionOverflowMenuStyle">@style/MyMenu</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextAppearance</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
    </style>

    <style name="nightTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="materialDrawerStyle">@style/Widget.MaterialDrawerStyleCustom</item>
        <item name="materialDrawerHeaderStyle">@style/Widget.MaterialDrawerHeaderStyleCustom</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary_night</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant_night</item>
        <item name="colorOnPrimary">@color/colorOnPrimary_night</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary_night</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant_night</item>
        <item name="colorOnSecondary">@color/colorOnSecondary_night</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="actionOverflowMenuStyle">@style/MyMenu</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextAppearance</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
    </style>
    <style name="PreferenceScreen" parent="nightTheme">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/colorPrimaryVariant</item>
    </style>
</resources>